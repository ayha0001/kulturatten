---
import "../assets/header.svg";
import logo from "../assets/logo-white.svg";
---

<article>
  <header class="header">
    <div class="logo">
      <a href="--something--">
        <img src={logo.src} alt="Logo" class="logo_img" />
      </a>
    </div>
    <nav>
      <ul class="menu">
        <li><a href="--something--">FORSIDE</a></li>
        <li><a href="--something--">PROGRAM</a></li>
        <li><a href="--something--">OM KULTURNAT</a></li>
      </ul>

      <div class="burger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>
    </nav>
  </header>
</article>

<style>
  article {
    background-color: var(--baggrund1);
  }
  .header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    background-image: url("../assets/header.svg");
    aspect-ratio: 1457.04 / 158.77;
    background-size: cover;
    background-position: bottom;
    background-repeat: no-repeat;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5vw;
    padding-bottom: 6vw;
    padding-left: 20px;
    padding-right: 20px;
    margin-bottom: 50px;
    z-index: 999;
  }

  .logo {
    height: 100%;
  }

  .logo_img {
    height: 100%;
    filter: drop-shadow(2px 4px 10px #00000040);
  }

  nav {
    display: flex;
    align-items: center;
  }

  .menu {
    display: none;
    list-style: none;
    margin: 0;
    padding: 0;
    background-color: var(--fontfarve);
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    z-index: 1;
  }

  .menu li {
    margin: 10px 20px;
  }

  .menu a {
    display: block;
    padding: 10px;
    color: #333333;
    text-decoration: none;
    transition: color 0.3s;
    text-align: end;
  }

  .menu a:hover {
    color: #ff0000;
  }

  .burger {
    cursor: pointer;
    display: block;
    filter: drop-shadow(2px 4px 10px #00000040);
  }

  .burger .line {
    width: 40px;
    height: 20px;
    background-color: var(--fontfarve);
    margin-bottom: 0.5vw;
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(1) {
    transform: rotate(45deg) translate(0.5vw, 0.5vw);
    transition: 0.2s linear;
  }

  .burger.active .line:nth-child(2) {
    opacity: 0;
    transition: 0.15s linear;
  }

  .burger.active .line:nth-child(3) {
    transform: rotate(-45deg) translate(0.5vw, -0.5vw);
    transition: 0.2s linear;
  }

  nav.active .menu {
    display: block;
  }
</style>

<script client:load>
  const logo = document.querySelector(".logo_img");
  const burger = document.querySelector(".burger");

  function setBurgerHeight() {
    const logoHeight = logo.clientHeight;
    burger.style.height = `${logoHeight}px`;
  }

  window.addEventListener("load", setBurgerHeight);
  window.addEventListener("resize", setBurgerHeight);

  burger.addEventListener("click", () => {
    const nav = document.querySelector("nav");
    nav.classList.toggle("active");
    burger.classList.toggle("active");
  });
</script>
